{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "app/index.tsx",
    "app/interfaces.d.ts",
    "typings/main.d.ts"
  ],
  "filesGlob": [
    "app/**/*.tsx",
    "app/**/*.ts"
  ]
}